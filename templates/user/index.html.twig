{% extends 'base.html.twig' %}

{% block title %}Liste des Tags{% endblock %}

{% block body %}
    <h1>Liste des users </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {{ dump(user.roles) }}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles | join(', ')}}</td>
                    <td>
                        <a href="{{ path('app_admin_show',{id: user.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_admin_edit',{id: user.id}) }}" class="btn btn-warning">Modifier Role</a>
                    </td>
                </tr>

        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('category_new') }}">Create new</a>#}
{% endblock %}
